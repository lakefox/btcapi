html, body
  padding: 0
  margin: 0
  margin-bottom: 40px

#container
  max-width: 90%
  width: 700px
  margin: auto
  margin-top: 50px
  text-align: center
  min-height: 50vh

.exchange
  width: 200px
  height: 200px
  box-shadow: 2px 2px 8px -1px #c7c7c7
  margin: 10px
  display: inline-block

.name
  font-family: 'Roboto', sans-serif
  text-align: center
  font-size: 40px
  padding-top: 30px
  color: #212121

.price
  font-family: 'ZCOOL QingKe HuangYou', cursive
  font-size: 30px
  text-align: center
  padding-top: 30px
  color: #212121

.exchange:first-child .price
  color: #4dff4d

.exchange:last-child .price
  color: #ff6161

.loader
  color: #212121
  position: absolute
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 100px

.price_diff
  width: 700px
  max-width: 90%
  margin: auto
  margin-top: 50px
  font-size: 43px
  color: #212121
  font-family: 'ZCOOL QingKe HuangYou', cursive

.calc
  float: right

#input
  border: 3px solid #212121
  border-radius: 4px
  padding: 4px
  text-align: right
  width: 100px
  font-size: 15px
  float: right

#profit
  font-size: 30px
  text-align: right

.info
  width: 700px
  max-width: 90%
  margin: auto
  margin-top: 50px

.h1
  font-size: 50px
  font-family: 'Roboto', sans-serif
  color: #212121

.green
  color: #4dff4d

.red
  color: #ff6161

#buy_amt
  color: #4e4e4e
  margin: 0

#continue
  width: 250px
  margin: auto;
  height: 70px
  background: #212121
  color: #fff
  border-radius: 5px
  margin-top: 100px
  line-height: 70px
  text-align: center
  font-family: 'Roboto', sans-serif
  font-size: 30px
  cursor: pointer;
